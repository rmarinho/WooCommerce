<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="{Binding PageName}" IsBusy="{Binding IsBusy}" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="WooCommerce.ProductsPage">
	<ContentPage.Content>
		<ListView ItemsSource="{Binding Products}" Grid.Row="2" RowHeight="180">
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition>
								</RowDefinition>
								<RowDefinition Height="Auto">
								</RowDefinition>
							</Grid.RowDefinitions>
							<Image Grid.Row="0" Source="{Binding images[0].src}" Aspect="AspectFit">
							</Image>
							<Label Grid.Row="1" Text="{Binding title}" Font="Helvetica-Light" HorizontalOptions="Center">
							</Label>
						</Grid>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</ContentPage.Content>
</ContentPage>