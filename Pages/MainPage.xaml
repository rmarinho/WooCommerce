<?xml version="1.0" encoding="UTF-8"?>
<ContentPage IsBusy="{Binding IsBusy}" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="WooCommerce.MainPage">
	<ContentPage.Content>
	<Grid>
	<Grid.RowDefinitions>
		<RowDefinition />
		<RowDefinition />
		<RowDefinition />
	</Grid.RowDefinitions>

		<Label Text="{Binding StoreName}" Grid.Row="1" HorizontalOptions="Center"></Label>
		<ActivityIndicator IsRunning="{Binding IsBusy}" Grid.Row="2" IsVisible="{Binding IsBusy}" VerticalOptions="Start" HorizontalOptions="Center"></ActivityIndicator>
	
	</Grid>
	</ContentPage.Content>
</ContentPage>
